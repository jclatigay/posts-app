<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <i class="fa-solid fa-user-plus login-icon"></i>
      <h2>Sign up</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text">
            <i class="fa-solid fa-envelope"></i>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "form-control",
              placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
          <span class="password-hint">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
        <div class="input-group">
          <span class="input-group-text">
            <i class="fa-solid fa-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "form-control",
              placeholder: "Create a password" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text">
            <i class="fa-solid fa-lock"></i>
          </span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "form-control",
              placeholder: "Confirm your password" %>
        </div>
      </div>

      <%= f.submit "Sign up", class: "btn btn-primary w-100" %>
    <% end %>

    <div class="login-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
